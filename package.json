{
  "name": "read-scripture-extension",
  "version": "3.1.4",
  "description": "Chrome Extension that opens the Read Scripture daily Bible reading in a new tab",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && webpack --mode=production",
    "watch": "webpack --watch --mode=development",
    "dev": "webpack --mode=development",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "validate": "npm run lint && npm run build"
  },
  "devDependencies": {
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "copy-webpack-plugin": "^12.0.2",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.10.0",
    "sass-loader": "^14.1.1",
    "style-loader": "^3.3.4",
    "mini-css-extract-plugin": "^2.8.0",
    "sass": "^1.71.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  }
}
